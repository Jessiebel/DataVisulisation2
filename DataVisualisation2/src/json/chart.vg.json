{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Incoming travelers by home country",
  "width": 800,
  "height": 400,
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 1991,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 1,
        "fill":"skyblue"
      }
    },
    {
      "mark": {"type": "geoshape"},
      "data": {"graticule": true}
    },    
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jessiebel/DataVisulisation2/refs/heads/main/DataVisualisation2/data/globalCoords.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Jessiebel/DataVisulisation2/refs/heads/main/DataVisualisation2/data/Arrivals.csv"
            },
            "key": "Country",
            "fields": ["Total_2023"]
          }
        },
        {"calculate": "datum.Total_2023", "as": "Total"}
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Total",
          "type": "quantitative",
          "scale": {
            "domain": [0, 100, 1000, 10000, 100000, 1000000, 10000000],
            "range": ["#f0f0f0", "#ffcc80", "#ffb74d", "#ffa726", "#fb8c00", "#ef6c00"]
          },
          "legend": {
            "title": "Total Arrivals",
            "tickCount": 6,
            "titleFontSize": 14,
            "labelFontSize": 12,
            "orient": "right"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Total_2023", "type": "quantitative", "title": "Total Arrivals"}
        ]
      }
    }
  ]
}
